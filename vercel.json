{
  "version": 2,
  "builds": [
    {
      "src": "routes/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "routes/**/*",
          "views/**/*",  
          "public/**/*" 
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "routes/app.js"
    }
  ]
}
